<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.veterinaria.controllers.RegistrarMascotaController"
      spacing="12" alignment="CENTER" prefWidth="560" prefHeight="360" style="-fx-background-color: white;">
    <children>
        <Label text="Registrar Mascota" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="180"/>
                <ColumnConstraints minWidth="300"/>
            </columnConstraints>
            <children>
                <Label text="Nombre:" GridPane.rowIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Especie:" GridPane.rowIndex="1"/>
                <TextField fx:id="txtEspecie" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Raza:" GridPane.rowIndex="2"/>
                <TextField fx:id="txtRaza" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Edad:" GridPane.rowIndex="3"/>
                <TextField fx:id="txtEdad" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="IdentificaciÃ³n:" GridPane.rowIndex="4"/>
                <TextField fx:id="txtIdentificacion" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Propietario:" GridPane.rowIndex="5"/>
                <ComboBox fx:id="cmbPropietario" promptText="Seleccione propietario" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </children>
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <children>
                <Button text="Guardar Mascota" onAction="#guardarMascota"/>
                <Button text="Cancelar" onAction="#cancelar"/>
            </children>
        </HBox>
    </children>
    <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
</VBox>
